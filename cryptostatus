import subprocess
import re
from sys import argv as arg

# Get parameters from the environment variables passed from i3blocks config file
def getParams(envs):
    values = dict()
    i = 1
    for e in envs: 
       values.update({e:arg[i]})
       i += 1
    return values

# Get raw data from the API. 
def getData(params):
    cmd = "curl -s -f '{}.rate.sx/{}@{}?qT' | sed '/begin/p;/avg/p'".format(
        params['CURRENCY'], params['COIN'], params['PERIOD']
    )
    return str(subprocess.check_output(cmd,shell=True))

# Return the crypto status values on a list. 
def getValues(data_str, params):
    patterns = [        
        r'(?<=end:\s)\$?\d*\.\d*',
        r'(?<=change:\s)[\+|\-]\d*\.?\d*\s',
        r'(?<=\()[\+|\-]\d*\.\d*\%(?=\))'
    ]

    vls = list()
    vls.append(params['COIN'].upper() + ':')

    for px in patterns:
        vls.append(re.search(px,data_str).group())

    # The list here is like ['COIN','VALUE','CABS','CPERC']
    # The command below just inserts the currency code after 'VALUE', or in place of 'CABS' 
    vls.insert(2,params['CURRENCY'].upper())
    # ['COIN','VALUE','CURRENCY','CABS','CPERC']

    # Check the signal of the change to set the proper foreground color
    signal = re.search(r'^[\+|\-]',vls[3]).group()
    color = {'-':'%{F#FF0000}','+':'%{F#00FF00}'}
    vls.insert(3, color[signal])
    vls += ['%{F-}', params['PERIOD']]
    
    # Return list = ['COIN','VALUE','CURRENCY','CABS','CPERC','PERIOD']
    return vls        
    
envs = getParams(['COIN', 'CURRENCY', 'PERIOD', 'SHOW_CHANGE'])
values = getValues(getData(envs), envs)

if envs['SHOW_CHANGE'] == 'true':
    print(' '.join(values))
else:
    print(' '.join(values[:3]))

